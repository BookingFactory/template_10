
<div class="gallery">
  <div class="carousel-wrapper">
    <div class="carousel carousel-shadow carousel-with-arrows">
      <div class="window">
        <ul class="image-list content-list">
          {% if website_data.gallery_photos.size > 0 %}
            {% for photo in website_data.gallery_photos %}
              <li class="image-warpper"><img src="{{photo.image | attachment_url: 'original'}}" alt="Hotel photo"></li>
            {% endfor %}
          {% else %}
            <li class="image-warpper">
              <img src="https://placehold.it/464x310?text=No%20photo" alt="No photo"/>
            </li>
          {% endif %}
        </ul>
      </div>
      <div class="carousel-pagination-wrapper">
        <div class="carousel-pagination">
          <div class="left-arrow"></div>
          <div class="right-arrow"></div>
          <ul class="pages">
            {% for photo in website_data.gallery_photos %}
              <li>{{ forloop.index }}</li>
            {% endfor %}
          </ul>
          <span class="delimiter"></span>
          <span class="count-page">{{ website_data.gallery_photos.size }}</span>
        </div>
      </div>
    </div>
  </div>
</div>