<div class="home">
  <div class="info">
    <div class="carousel-wrapper">
      <div class="carousel carousel-shadow white-theme">
        <div class="window">
          <ul class="image-list">
            {% for photo in website_data.top_bar_photos %}
              <li class="image-warpper"><img src="{{photo.image | attachment_url: 'public_big'}}" alt="Hotel photo"></li>
            {% endfor %}
          </ul>
        </div>
        <div class="nav-tools">
            {% for photo in website_data.top_bar_photos %}
              <div class="nav-point"></div>
            {% endfor %}
        </div>
      </div>
    </div>
    <div class="text-wrapper">
      <h1>{{website_data.header_text_1}}</h1>
      <p>{{website_data.header_text_2}}</p>
      <form action="" method="">
        <div class="input-group">
          <input id="checkIn" class="date-picker" type="text" placeholder="Check-In">
          <label class="date-picker-label" for="checkIn">Check In</label>
          <div class="input-prepend">
            <i class="fas fa-calendar-alt input-icon"></i>
          </div>
        </div>
        <div class="input-group check-out">
          <input id="checkOut" class="date-picker" type="text" placeholder="Check-Out">
          <label class="date-picker-label" for="checkOut">Check Out</label>
          <div class="input-prepend">
            <i class="fas fa-calendar-alt input-icon"></i>
          </div>
        </div>
        <button class="button button-success" type="submit">See rooms</button>
      </form>
    </div>
  </div>
  <div class="rooms">
    <h2>{{website_data.room_section_title}}</h2>
    <p>{{website_data.room_section_description}}</p>
    <div class="cards">
      <div class="window">
        <div class="cards-list">
          {% for room in website_data.rooms %}
            {% if room.visible == true %}
              <div class="card">
                <div class="image-wrapper">
                  <img src="{{ room.room_type.photos.first.image | attachment_url: 'public_big' }}" alt="Room photo">
                </div>
                <div class="body">
                  <h3>{{ room.name }}</h3>
                  <ul class="bulleted-list">
                    <li><i class="marker"></i>Adults: 4</li>
                    <li><i class="marker"></i>Children: 2</li>
                    <li><i class="marker"></i>Free Wi-Fi, Conditioneer, Microwave oven, Extra Bed 
                        and 7 more</li>
                  </ul>
                  <a class="read-more-link" href="{{ room.slug | link_to: website_data.link_object }}">Read More</a>
                </div>
                <div class="footer">
                  <a class="button button-success" href="#">book now</a>
                  <div class="price">
                    from<br>
                    <span class="value">£12.59</span><br>
                    per night
                  </div>
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
    <div class="row footer no-gutters">
      <div class="col-12">
        <div class="nav-tools">
          {% for room in website_data.rooms %}
            <div class="nav-point"></div>
          {% endfor %}
        </div>
        <a class="button button-info" href="/rooms-services.html">Check all rooms</a>
      </div>
    </div>
  </div>
