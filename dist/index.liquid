  <div class="what-people-say">
    <div id="reviews_1" class="reviews">
      <div class="window">
        <div class="author-background"></div>
        <div class="reviews-list">
          {% for testimonial in website_data.testimonials %}
            <div class="review active">
              <h2>{{ testimonial.title }}</h2>
              <p>{{ testimonial.body }}</p>
              <div class="author">
                {{ testimonial.name }}<br>
                <span class="author-role">babysitter, AF Agency</span>
              </div>
            </div>
          {% endfor %}
        </div>
        <div class="carousel-pagination">
          <div class="left-arrow"></div>
          <div class="right-arrow"></div>
          <ul class="pages">
            {% for testimonial in website_data.testimonials %}
              <li>{{ forloop.rindex }}</li>
            {% endfor %}
          </ul>
          <span class="delimiter"></span>
          <span class="count-page">{{ website_data.testimonials.size }}</span>
        </div>
      </div>
    </div>
  </div>
  <div class="expert-opinion">
    <div id="reviews_2" class="posts">
      <div class="body">
        <div class="image-wrapper image-wrapper-shadow">
          <div class="image-list pagination-image-list">
            {% for record in website_data.blog_records %}
              <img
                src="{{ record.image | attachment_url: 'public_big' }}"
                alt="{{ record.alt_text }}">
            {% endfor %}
          </div>
        </div>
        <div class="post-list pagination-text-list">
          {% for record in website_data.blog_records %}
            <div class="post">
              <h2 class="post-subtitle">{{ website_data.blog_section_title }}</h2>
              <h3 class="post-title">{{ record.title }}</h3>
              <p>{{ record.text }}</p>
              <a class="button button-info" href="{{ record.slug | link_to: website_data.link_object }}">Check post</a>
            </div>
          {% endfor %}
        </div>
        <div class="carousel-pagination tablet-see">
          <div class="left-arrow" data-arrrow="left"></div>
          <div class="right-arrow" data-arrrow="right"></div>
          <ul class="pages">
            {% for record in website_data.blog_records %}
              <li>{{ forloop.rindex }}</li>
            {% endfor %}
          </ul>
          <span class="delimiter"></span>
          <span class="count-page">{{ website_data.blog_records.size }}</span>
        </div>
        <div class="nav-tools white-theme mobile-see">
          <div class="nav-point"></div>
          <div class="nav-point"></div>
          <div class="nav-point"></div>
        </div>
      </div>
    </div>
  </div>
  <div class="frequently-asked-questions">
    <div class="questions">
      <h2>{{ website_data.faq_title }}</h2>
      <div class="body body-shadow">
        <div class="questions-list">
          {% for item in website_data.questions %}
            <div class="question">
              <span class="marker"></span>
              <p class="question-text">{{ item.question }}</p>
              <p>{{ item.answer }}</p>
            </div>
          {% endfor %}
        </div>
        <div class="button-wrapper">
          <a class="button button-success" href="/faq.html">Check All Answers</a>
        </div>
      </div>
    </div>
  </div>
  <div id="contacts" class="contacts">
    <div id="contact-us" class="body show">
      <h2>{{ website_data.contact_area_title }}</h2>
      <p>{{ website_data.contact_description_text }}</p>
      <ul>
        <li>
          <span class="property">{{ 'Address' | t: website_data.lang }}:</span>
          <span class="value">{{ website_data.address }}</span>
        </li>
        <li>
          <span class="property">{{ 'Email' | t: website_data.lang }}</span>
          <span class="value">
            <a href="mailto:{{ website_data.email_address }}">
              {{ website_data.email_address }}
            </a>
          </span></li>
        <li>
          <span class="property">{{ 'Phone' | t: website_data.lang }}:</span>
          <span class="value">
            <a href="tel:{{ website_data.phone_number }}">
              {{ website_data.phone_number }}
            </a>
          </span></li>
      </ul>
      <div class="button-wrapper">
        <button class="button button-success">
          <span class="tablet-see">{{ 'Get In Touch' | t: website_data.lang }}</span>
          <span class="arrow mobile-see"></span>
        </button>
      </div>
    </div>
    <div id="get-in-touch" class="body body__form">
      <h2>{{ 'Get In Touch' | t: website_data.lang }}</h2>
      <form>
        <div class="row no-gutters">
          <div class="col-md-6 col-12 no-gutters">
            <div class="form-group e-mail-group">
              <input id="e-mail" type="text">
              <label for="e-mail">{{ 'Email' | t: website_data.lang }}</label>
            </div>
          </div>
          <div class="col-md-6 col-12 no-gutters">
            <div class="form-group first-name-group">
              <input id="first-name" type="text">
              <label for="first-name">First Name</label>
            </div>
          </div>
        </div>
        <div class="row no-gutters">
          <div class="col-12 no-gutters">
            <div class="form-group">
              <textarea id="message" rows="1"></textarea>
              <label for="message">Text your message here…</label>
            </div>
          </div>
        </div>
        <div class="row footer no-gutters">
          <div class="col-md-6 col-12 no-gutters">
            <input id="get-in-touch-checkbox" name="get-in-touch-checkbox" type="checkbox">
            <label for="get-in-touch-checkbox">I'm not a robot</label>
          </div>
          <div class="col-md-6 col-12 no-gutters">
            <button class="button button-success footer-button">Send message</button>
          </div>
        </div>
      </form>
      <div class="button-wrapper">
        <button class="button button-success">
          <span class="tablet-see">Contact Us</span>
          <span class="arrow mobile-see"></span>
        </button>
      </div>
    </div>
    <div class="map-wrapper map-wrapper-shadow">
      <div id="map" class="map"></div>
    </div>
  </div>
</div>