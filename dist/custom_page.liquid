<div class="simple-page custom-page">
  <div class="info">
    <div class="carousel-wrapper">
      <div class="carousel carousel-shadow">
        <div class="window">
          <ul class="image-list">
            {% if page.website_page_photos.size > 0 %}
              {% for photo in page.website_page_photos %}
                <li class="image-warpper">
                  <img src="{{ photo.image | attachment_url: 'original' }}" alt="Room photo"/>
                </li>
              {% endfor %}
            {% else %}
              <li class="image-warpper">
                <img src="https://placehold.it/464x310?text=No%20photo" alt="No photo"/>
              </li>
            {% endif %}
          </ul>
        </div>
        <div class="nav-tools">
          {% for photo in page.website_page_photos %}
            <div class="nav-point"></div>
          {% endfor %}
        </div>
      </div>
      {% if website_data.booking_link == '' %}
        <a href="{{ '/book' | link_to: website_data.link_object}}" class="button button-success">Book Now</a>
      {% else %}
        <a href="{{website_data.booking_link}}" class="button button-success">Book Now</a>
      {% endif %}
    </div>
    <div class="text-wrapper">
      {% unless page.content == '' %}
        <div class="text-content">{{ page.content }}</div>
      {% endunless %}
    </div>
  </div>
</div>